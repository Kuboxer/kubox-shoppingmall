# ===========================================
# 공통 설정 (모든 서비스에서 사용)
# ===========================================

# JWT 설정
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_EXPIRATION=86400000

# 데이터베이스 설정
DB_HOST=mysql
DB_PORT=3306
DB_USERNAME=shop_user
DB_PASSWORD=your_password_here

# ===========================================
# Docker MySQL 설정
# ===========================================

# MySQL Docker 컨테이너용 환경변수
MYSQL_ROOT_PASSWORD=your_root_password_here
MYSQL_DATABASE=shop_db
MYSQL_USER=shop_user
MYSQL_PASSWORD=your_password_here

# ===========================================
# 결제 서비스 설정 (Payment Service)
# ===========================================

# BootPay API 키 (실제 운영에서는 반드시 변경)
BOOTPAY_APPLICATION_ID=your_bootpay_app_id
BOOTPAY_PRIVATE_KEY=your_bootpay_private_key
BOOTPAY_API_URL=https://api.bootpay.co.kr

# ===========================================
# 개발 환경 설정
# ===========================================

# CORS 설정 (개발/운영에 따라 변경)
CORS_ALLOWED_ORIGINS=http://localhost:3000
# AWS 배포 시 예시: https://kubox.com,https://www.kubox.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE
CORS_ALLOWED_HEADERS=*

# 로그 레벨
LOG_LEVEL=DEBUG
